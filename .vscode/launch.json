{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: webpack"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Localise Walkthrough Media",
			"program": "${workspaceFolder}/localise-walkthrough-media.js", 
			"args": [],
			"skipFiles": [
				"<node_internals>/**",
				"node_modules/**"
			] // Skip node internals during debugging
		}
	]
}